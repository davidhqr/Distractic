<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_opaque_road_white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/forgot_image_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_lock" />

    <TextView
        android:id="@+id/forgot_text_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_image_lock"
        android:layout_centerInParent="true"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgot_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_text_forgotPassword"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/forgot_passwordMessage"
        android:textAlignment="center"
        android:textColor="@color/colorTextGrey"
        android:textSize="12sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/forgot_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_text_message"
        android:layout_marginBottom="-8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="@string/forgot_emailText"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/forgot_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_text_email"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <EditText
            android:id="@+id/forgot_edit_enteremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_mail"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/forgot_button_sendbutton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_email"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_rounded_button_filled"
        android:text="Send"
        android:textColor="@color/colorPrimary" />

    <ProgressBar
        android:id="@+id/reset_progress_loading"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_button_sendbutton"
        android:layout_marginTop="10dp"
        android:indeterminate="true"
        android:visibility="invisible" />

</RelativeLayout>